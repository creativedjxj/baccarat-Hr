  <script>
    const password = "bcr600";
    function checkPassword() {
      const input = document.getElementById("password-input").value;
      if (input === password) {
        document.getElementById("login-screen").style.display = "none";
        document.getElementById("main-app").style.display = "block";
      } else {
        alert("ë¹„ë°€ë²ˆí˜¸ê°€ í‹€ë ¸ìŠµë‹ˆë‹¤.");
      }
    }

    let results = [];

    function addResult(result) {
      results.push(result);
      updateDisplay();
      showProbabilities(); // ìë™ ì—…ë°ì´íŠ¸
    }

    function resetResults() {
      results = [];
      updateDisplay();
      document.getElementById("probabilities").innerHTML = "";
    }

    function updateDisplay() {
      const container = document.getElementById("results");
      container.innerHTML = "";
      results.forEach(r => {
        const circle = document.createElement("span");
        circle.classList.add("circle");
        if (r === "P") circle.classList.add("blue");
        else if (r === "B") circle.classList.add("red");
        else if (r === "T") circle.classList.add("green");
        container.appendChild(circle);
      });
    }

    function showProbabilities() {
      const counts = { P: 0, B: 0, T: 0 };
      results.forEach(r => counts[r]++);
      const total = results.length || 1; // ë‚˜ëˆ„ê¸° ë°©ì§€

      const pProb = ((counts.P / total) * 100).toFixed(1);
      const bProb = ((counts.B / total) * 100).toFixed(1);
      const tProb = ((counts.T / total) * 100).toFixed(1);

      document.getElementById("probabilities").innerHTML = `
        <p>ğŸ“Š ë‹¤ìŒ ê²°ê³¼ ì˜ˆì¸¡ í™•ë¥ </p>
        <p>í”Œë ˆì´ì–´: <strong>${pProb}%</strong> | ë±…ì»¤: <strong>${bProb}%</strong> | íƒ€ì´: <strong>${tProb}%</strong></p>
      `;
    }
  </script>
